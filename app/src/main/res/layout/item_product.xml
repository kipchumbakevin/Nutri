<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardUseCompatPadding="true"

    app:contentPadding="@dimen/activity_half_margin"

    app:cardBackgroundColor="@android:color/white"

    app:cardCornerRadius="@dimen/card_radius"

    app:cardElevation="@dimen/card_elevation"

    android:layout_marginLeft="@dimen/activity_half_margin"

    android:layout_marginStart="@dimen/activity_half_margin"

    android:padding="10dp"
    tools:context="com.nutri.nutri.NavigationActivity">


    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_marginBottom="4dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

    <ImageView

        android:id="@+id/product_image"
        android:layout_gravity="center"

        android:layout_width="300dp"

        android:layout_height="200dp"

        android:src="@drawable/eggs"

        android:scaleType="center" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/logologo" />
        </RelativeLayout>


    <LinearLayout

        android:orientation="vertical"

        android:layout_width="match_parent"

        android:layout_height="wrap_content">

    <TextView

        android:id="@+id/product_name"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textColor="@color/colorOrange"
        android:textSize="25dp"

        android:layout_weight="6"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGreen"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:background="@drawable/buttoncart"
                android:textSize="12sp"
                android:text="Add to cart"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:tint="@color/colorGreen"
                android:src="@drawable/ic_add"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
