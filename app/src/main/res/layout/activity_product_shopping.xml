<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/veges"
    tools:context=".ProductShopping">

    <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"

    app:contentPadding="@dimen/activity_half_margin"

    app:cardBackgroundColor="@android:color/white"

    app:cardCornerRadius="@dimen/card_radius"

    app:cardElevation="@dimen/card_elevation"

    android:layout_marginLeft="@dimen/activity_half_margin"
        android:layout_marginTop="20dp"

    android:layout_marginStart="@dimen/activity_half_margin"

    android:padding="15dp">


    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_marginBottom="4dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

        <ImageView

            android:id="@+id/product_image"
            android:layout_gravity="center"

            android:layout_width="300dp"

            android:layout_height="200dp"

            android:src="@drawable/eggs"

            android:scaleType="center" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/logologo" />
        </RelativeLayout>


        <LinearLayout

            android:orientation="vertical"

            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="1dp"
                android:background="@color/colorGreen"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RatingBar

                android:id="@+id/rating"

                style="?android:attr/ratingBarStyleSmall"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:numStars="5"

                android:layout_gravity="center"

                android:rating="5"

                android:stepSize="1.0"

                android:isIndicator="true"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/amount"
                    android:text="0"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/viewCart"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="200dp"
                    android:layout_height="wrap_content"
                    android:tint="@color/colorGreen"
                    android:src="@drawable/ic_add"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:contentPadding="@dimen/activity_half_margin"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="@dimen/card_elevation"
            android:layout_marginLeft="@dimen/activity_half_margin"
            android:layout_marginStart="@dimen/activity_half_margin"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/product_name"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:textColor="@color/colorOrange"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/buy_now"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/buttoncart"
                    android:text="BUY NOW"
                    android:textStyle="italic"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/description"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttoncart"
            android:textColor="@color/colorWhite"
            android:text="Description"/>

    </LinearLayout>
</LinearLayout>
